                            {
                                "type":"origins:resource",
                                "resource":"artificer:powertoggles_spectralvisiontoggle",
                                "comparison":"==",
                                "compare_to":1
                            },
                            {
                                "type": "origins:or",
                                "conditions": [
                                    {
                                        "type":"origins:resource",
                                        "resource":"artificer:equipmenttoggles_diamondhelmet",
                                        "comparison":"==",
                                        "compare_to":1
                                    },
                                    {
                                        "type":"origins:resource",
                                        "resource":"artificer:equipmenttoggles_netheritehelmet",
                                        "comparison":"==",
                                        "compare_to":1
                                    }
                                ]
                            }
